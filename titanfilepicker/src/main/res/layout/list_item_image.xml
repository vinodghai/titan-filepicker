<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1.2dp">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivThumbnail"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:minWidth="125dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/greyOverlay"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/ivThumbnail"
        app:layout_constraintLeft_toLeftOf="@id/ivThumbnail"
        app:layout_constraintRight_toRightOf="@id/ivThumbnail"
        app:layout_constraintTop_toTopOf="@id/ivThumbnail" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cbThumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:buttonTint="@color/accent"
        app:layout_constraintRight_toRightOf="@id/ivThumbnail"
        app:layout_constraintTop_toTopOf="@id/ivThumbnail" />

</androidx.constraintlayout.widget.ConstraintLayout>